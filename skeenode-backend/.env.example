# Skeenode Backend Environment Variables
# Copy to .env and fill in production values

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=skeenode
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=skeenode

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# etcd
ETCD_ENDPOINTS=localhost:2379

# Scheduler
SCHEDULER_INTERVAL=10s
LEADER_ELECTION_TTL=15

# API
API_PORT=8080

# AI Service
AI_SERVICE_URL=http://localhost:8000

# Authentication (REQUIRED for production)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ISSUER=skeenode
AUTH_ENABLED=false

# Tracing (OpenTelemetry)
OTEL_ENABLED=false
OTEL_ENDPOINT=localhost:4318
OTEL_SERVICE_NAME=skeenode-api
OTEL_SAMPLING_RATE=1.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
